<Window x:Class="Prestamos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prestamos"
        mc:Ignorable="d"
        Title="Menu Principal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height = "20" VerticalAlignment="Top">
        
                <MenuItem Header= "Registros" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Top">
                    <MenuItem x:Name="Registrar_Persona" Header="Registrar Persona" Click= "Registrar_Personas_Click"/>
                    <MenuItem x:Name="Registrar_Prestamo" Header="Registrar Prestamo"/>
                </MenuItem>

                <MenuItem Header= "Consultas" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top">
                    <MenuItem x:Name="Consultar_Persona" Header="Consultar Persona"/>
                    <MenuItem x:Name="Consultar_Prestamo" Header="Consultar Prestamo"/>
                </MenuItem>
            </Menu>
        </StackPanel>    
    </Grid>
</Window>
